@model VoteModel

<div class="container py-5">
    <h1 class="mb-4 text-center">@ViewBag.title</h1>

    <form asp-action="AddVote" class="bg-white p-4 rounded shadow-sm">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="choice" id="option1" value="1">
            <label class="form-check-label" for="option1">
                @ViewBag.Option1Text
            </label>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="choice" id="option2" value="2">
            <label class="form-check-label" for="option2">
                @ViewBag.Option2Text
            </label>
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" type="radio" name="choice" id="option3" value="3">
            <label class="form-check-label" for="option3">
                @ViewBag.Option3Text
            </label>
        </div>

        <!-- First Submit Button -->
        <button type="submit" class="btn btn-primary w-100 mb-3">Vote</button>
    </form>
</div>
